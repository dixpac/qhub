<%= form_with(url: search_index_path, method: "get", local: true, class: "form-inline my-2 my-lg-0") do |form| %>
  <div class="input-group">
    <%= form.text_field :q, class: "form-control", placeholder: "Search..." %>
    <div class="input-group-append">
      <%= form.button :submit, id: "search", class: "btn-success my-2 my-sm-0" do %>
        <%= icon "fas", "search" %>
      <% end %>
    </div>
  </div>
<% end %>
