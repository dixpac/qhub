<%= form_with(model: question, local: true) do |form| %>
  <%= form_errors form.object %>

  <div class="form-group">
    <%= form.label :title %>
    <%= form.text_field :title, class: "form-control" %>
  </div>

  <div class="form-group">
    <%= form.label :content %>
    <%= form.text_field :content, class: "form-control", data: { controller: "markdown-editor" } %>
  </div>

  <div class="actions">
    <%= form.submit "Post question", class: "btn btn-success" %>
  </div>
<% end %>
