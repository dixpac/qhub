<% if Current.user && Current.user.likes?(likable) %>
  <%= link_to "Unlike", polymorphic_path([likable, Liking.new]), method: :delete, remote: true %>
<% else %>
  <%= link_to "Like", polymorphic_path([likable, Liking.new]), method: :post, remote: true %>
<% end %>

<%= likable.likings.count %>

<% likable.likings.each do |liking| %>
  <%= user_avatar liking.user, size: "20x20" %>
<% end %>
